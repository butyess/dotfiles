#
# wm independent hotkeys
#

# terminal emulator
super + Return
	tilix --profile=Bspwm --window-style=borderless &

# web browser
super + b
	firefox &

super + alt + b
	chromium &

# file manager
super + e
	nautilus &

# program launcher
super + @space
	$HOME/.config/sxhkd/launch_rofi.sh &

# # toggle polybar
# super + p
# 	$HOME/.config/sxhkd/toggle_polybar.sh

# window switcher
alt + Tab
	rofi -show window -modi "window"

# clipboard manager
super + v
	rofi -show clipboard -modi "clipboard:greenclip print"

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# Volume control
XF86AudioLowerVolume
	pulseaudio-control --volume-max 150 --volume-step 5 down
#amixer set Master 5%-

XF86AudioRaiseVolume
	pulseaudio-control --volume-max 150 --volume-step 5 up
#amixer set Master 5%+

XF86AudioMute
	pulseaudio-control togmute
#amixer set Master toggle

XF86AudioPlay
	playerctl play-pause

XF86AudioStop
	playerctl pause

XF86AudioPrev
	playerctl previous

XF86AudioNext
	playerctl next

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

#
# Edit desktop number
#

# add a desktop to current monitor
super + a
	bspc monitor focused -a X

# delete current desktop
super + shift + a
	bspc desktop focused -r

#
# Window gap and border width
#

# increase/decrease window gap
super + {minus, equal}
	bspc config window_gap $((`bspc config -d focused window_gap` {+ 5, - 5}))

# default window gap
super + plus
	bspc config window_gap 3

# increase/decrease border width
super + ctrl + {minus, equal}
	bspc config border_width $((`bspc config -d focused border_width` {+ 1, - 1}))

# default border width
super + ctrl + plus
	bspc config border_width 1

#
# focus/swap
#

# focus the node in the given direction
super + {h,j,k,l}
	bspc node -f {west,south,north,east}

# focus the next/previous desktop in the current monitor
super + shift + {j,k}
	bspc desktop -f {next,prev}.local

# swap node with direction
super + alt + ctrl + {h,j,k,l}
	bspc node -s {west,south,north,east} --follow

# focus the next/previous window in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local.!hidden.window

# focus the last node/desktop
super + {backslash,Tab}
	bspc {node,desktop} -f last

# focus the monitor
super + {1-3}
	bspc monitor -f ^{1-3}

# send to the given desktop
super + shift + {1-9,0}
	bspc node -d {1-9,10} --follow

#
# preselect: super + ctrl
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# resize: super + alt
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

#
# move: super + shift or super + arrow
#

# move the node to the monitor in the direction
super + shift + {h,l}
	bspc node -m {prev,next} --follow

# move the node in the next desktop of current monitor
super + d
	bspc node -d next.local

# move the node in the next desktop of current monitor
super + shift + d
	bspc node -d prev.local

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
